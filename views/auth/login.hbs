<div class="container sign-up-container">
  <h2 class="red-text">Login</h2>

  <form action="/auth/login" method="POST" id="form-container">
    <div class="form-group">
      <label for="username">Username</label>
      <input id="username" type="text" name="username" placeholder="JonSnow">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input id="password" type="password" name="password" placeholder="Your password">
    </div>

    {{#if message }}
    <div class="form-group">
      <div class="error-message">{{ message }}</div>
    </div>
    {{/if}}

    <div class="form-group">
      <button class="btn log-button">Login</button>
      <p class="account-message">
        <span class="red-text">Don't have an account yet?</span>
        <a href="/auth/login">Signup</a>
      </p>
    </div>
  </form>
</div>