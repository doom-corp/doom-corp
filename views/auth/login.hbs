<script>
  $(document).ready(function () {
    $('#fire').fire({
      speed: 200,
      maxPow: 50,
      gravity: 0,
      flameWidth: 3,
      flameHeight: 0,
      plasm: false,
      fireTransparency: 0,
      fadingFlameSpeed: 8,
      mouseEffect: true,
      cartoon: true,
    });
  });
</script>

<div class="row sign-up-navbar">
  <div class="col-6 logo">
    <img src="/images/logo.png" class="logo-img" alt="Logo">
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/"><img src="/images/back.png" class="sign-img" alt="back to home"></a>
  </div>

<div class="container sign-up-container login">
  <h2 class="red-text form-title">Login</h2>
  <form action="/auth/login" method="POST" id="form-container">
    <div class="form-group">
      <input id="username" class="form-control form-custom" type="text" name="username" placeholder="evil employee">
    </div>
    <div class="form-group">
      <input id="password" class="form-control form-custom" type="password" name="password" placeholder="Your password">
    </div>

    {{#if message }}
    <div class="form-group">
      <div class="error-message">{{ message }}</div>
    </div>
    {{/if}}

    <div class="form-group">
      <button class="btn form-group form-btn-custom">Login</button>
      <p class="account-message center-text">
        <span class="red-text">Don't have an account yet?</span>
        <a href="/auth/signup">Signup</a>
      </p>
    </div>
  </form>
</div>
<canvas id="fire" class="fire"></canvas>