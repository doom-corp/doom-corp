<script>
  $(document).ready(function () {
    $('#fire').fire({
      speed: 200,
      maxPow: 50,
      gravity: 0,
      flameWidth: 3,
      flameHeight: 0,
      plasm: false,
      fireTransparency: 0,
      fadingFlameSpeed: 8,
      mouseEffect: true,
      cartoon: true,
    });
  });
</script>

<div class="row sign-up-navbar">
  <div class="col-6 logo">
    <img src="/images/logo.png" class="logo-img" alt="Logo">
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/"><img src="/images/back.png" class="sign-img" alt="back to home"></a>
  </div>

<div class="container sign-up-container signup">
  <h2 class="red-text form-title">Request access</h2>
  <form action="/auth/signup" method="POST" id="form-container" enctype="multipart/form-data">
    <div class="form-group">
      <input id="username" class="form-control form-custom" type="text" name="username" placeholder="Your username">
    </div>
    <div class="form-group">
      <input id="email" class="form-control form-custom" type="email" name="email" aria-describedby="emailHelp" placeholder="Your email">
    </div>
    <div class="form-group">
      <input id="photo" class="form-control form-custom" type="file" name="photo">
    </div>
    <div class="form-group">
      <input id="deathDate" class="form-control form-custom" type="date" name="deathDate" placeholder="Your death date">
    </div>
    <div class="form-group">
      <select name="role" id="role" class="form-control form-custom">
        <option class="form-custom" value="admin">Admin</option>
        <option value="executive">Executive</option>
      </select>
    </div>

    {{#if message }}
    <div class="error-message form-group">{{ message }}</div>
    {{/if}}

    <div class="form-group">
      <button class="btn form-group form-btn-custom">Create account</button>
      <p class="account-message center-text">
        <span class="red-text">Do you already have an account?</span>
        <a href="/auth/login">Login</a>
      </p>
    </div>
  </form>
</div>
<canvas id="fire" class="fire"></canvas>