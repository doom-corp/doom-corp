<div class="container-fluid">
  <div class="row index-navbar">
    <div class="col-6 logo">LOGO IMAGE</div>
    <div class="col-6">
      {{#if user}}
      <a href="/auth/logout" class="log-button">LOGOUT</a>
      <a href="/user" class="log-button">USER PANEL</a>
      {{/if}}
    </div>
  </div>
  <div class="row">
    <div class="col-2">LEFT SIDEBAR</div>
    <div class="col-8">
      <h3>DoomCorp Map</h3>
      <input id="pac-input" class="controls" type="text" placeholder="Enter a location">
      <div id="type-selector" class="controls">
        <input type="radio" name="type" id="changetype-all" checked="checked">
        <label for="changetype-all">All</label>
      
        <input type="radio" name="type" id="changetype-address">
        <label for="changetype-address">Addresses</label>
      
        <input type="radio" name="type" id="changetype-geocode">
        <label for="changetype-geocode">Geocodes</label>
      </div>
      <div id="map"></div>
    </div>
    <div class="col-2">RIGHT SIDEBAR</div>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ"
  crossorigin="anonymous"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCIszCKHrlW4gRlxCKrVivvSMueVwmntNg&libraries=places&callback=initMap"
  async defer></script>
<script src='/javascripts/googleMap.js'></script>