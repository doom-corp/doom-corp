<div class="container">
  <div class="row index-navbar">
    <div class="col-sm-12 col-6 logo">LOGO IMAGE</div>
    <div class="col-sm-12 col-6">
      {{#if user}}
      <p>Welcome to {{user.username}}</p>
      <a href="/auth/logout">LOGOUT</a>
      {{else}}
      <p>LOGIN FIRST!!!</p>
      <a href="/auth/signup">REQUEST ACCESS</a>
      <a href="/auth/login">LOGIN</a>
      {{/if}}
    </div>
  </div>
  <div class="row">
    <div class="col index-main d-flex align-self-center">
      <h1>{{title}}</h1>
      <p>Welcome to {{title}}</p>
    </div>
  </div>
</div>